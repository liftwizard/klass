        <!--endregion-->

        <!--region ${rootArtifactId}-reladomo-merge-hooks-->
        <module
                id="${rootArtifactId}-reladomo-merge-hooks"
                dir="__rootArtifactId__-reladomo-merge-hooks"
                name="${rootArtifactId}-reladomo-merge-hooks">
