            <fileSets>
                <fileSet filtered="true">
                    <directory></directory>
                </fileSet>
            </fileSets>
        </module>
        <!--endregion-->

        <!--region ${rootArtifactId}-klass-services-->
        <module
                id="${rootArtifactId}-klass-services"
