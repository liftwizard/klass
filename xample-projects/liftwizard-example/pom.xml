<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project
        xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <properties>
        <klass.version>${project.version}</klass.version>

        <app.artifactId>liftwizard-example</app.artifactId>
        <app.rootPackageName>com.example.helloworld</app.rootPackageName>
        <app.name>LiftwizardExample</app.name>

        <mainClass>${app.rootPackageName}.dropwizard.application.${app.name}Application</mainClass>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <maven.compiler.parameters>true</maven.compiler.parameters>
    </properties>

    <parent>
        <groupId>cool.klass</groupId>
        <artifactId>xample-projects</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>

    <groupId>io.liftwizard</groupId>
    <artifactId>liftwizard-example</artifactId>
    <packaging>pom</packaging>

    <name>${app.name} (Module Group)</name>

    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>io.liftwizard</groupId>
                <artifactId>liftwizard-dependencies</artifactId>
                <version>${liftwizard.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>io.liftwizard</groupId>
                <artifactId>liftwizard-bom</artifactId>
                <version>${liftwizard.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <build>
        <defaultGoal>clean install</defaultGoal>

        <plugins>

            <plugin>
                <artifactId>maven-checkstyle-plugin</artifactId>
            </plugin>

            <plugin>
                <artifactId>maven-enforcer-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>versions-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>

                    <execution>
                        <id>analyze</id>
                        <goals>
                            <goal>analyze-only</goal>
                        </goals>
                        <configuration>
                            <failOnWarning>false</failOnWarning>
                            <ignoredUnusedDeclaredDependencies>
                                <ignoredUnusedDeclaredDependency>ch.qos.logback:logback-classic:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>com.google.auto.service:auto-service</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>com.h2database:h2:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>cool.klass:klass-dropwizard-bundle-bootstrap-writer:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>cool.klass:klass-dropwizard-bundle-config-logging:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>cool.klass:klass-dropwizard-bundle-cors:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>cool.klass:klass-dropwizard-bundle-reladomo-jsonview:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>cool.klass:klass-dropwizard-bundle-reladomo-response:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>cool.klass:klass-dropwizard-bundle-sample-data:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>cool.klass:klass-dropwizard-configuration-domain-model-loader-compiler:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>cool.klass:klass-dropwizard-configuration-domain-model-loader-constant:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>cool.klass:klass-model-bootstrapped-meta:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>cool.klass:klass-model-bootstrapped-reladomo-ddls-workaround:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>cool.klass:klass-model-bootstrapped-reladomo-ddls:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-bundle-connection-manager-holder:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-bundle-connection-manager:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-bundle-ddl-executor:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-bundle-h2:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-bundle-logging-config:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-bundle-logging-http:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-bundle-named-data-source:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-bundle-object-mapper:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-bundle-reladomo:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-config-clock-fixed:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-config-clock-system:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-config-uuid-seed:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-config-uuid-system:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-logging-buffered-appender</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-reladomo-simulated-sequence-ddls:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>io.liftwizard:liftwizard-reladomo-simulated-sequence:jar</ignoredUnusedDeclaredDependency>
                                <ignoredUnusedDeclaredDependency>org.eclipse.collections:eclipse-collections:jar</ignoredUnusedDeclaredDependency>
                            </ignoredUnusedDeclaredDependencies>
                        </configuration>
                    </execution>

                    <execution>
                        <id>tree-txt</id>
                        <goals>
                            <goal>tree</goal>
                        </goals>
                        <phase>verify</phase>
                        <configuration>
                            <includes>cool.klass*</includes>
                            <outputType>txt</outputType>
                            <outputFile>${project.build.directory}/dependency-tree.txt</outputFile>
                            <tokens>extended</tokens>
                        </configuration>
                    </execution>

                    <execution>
                        <id>tree-dot</id>
                        <goals>
                            <goal>tree</goal>
                        </goals>
                        <phase>verify</phase>
                        <configuration>
                            <includes>cool.klass*</includes>
                            <outputType>dot</outputType>
                            <outputFile>${project.build.directory}/dependency-tree.dot</outputFile>
                            <tokens>extended</tokens>
                        </configuration>
                    </execution>

                </executions>
            </plugin>

        </plugins>

    </build>

    <modules>
        <module>${app.artifactId}-domain-model</module>
        <module>${app.artifactId}-reladomo-definitions</module>
        <module>${app.artifactId}-reladomo-merge-hooks</module>
        <module>${app.artifactId}-reladomo-pojos</module>
        <module>${app.artifactId}-reladomo-readable-interfaces</module>
        <module>${app.artifactId}-reladomo-runtime-configuration</module>
        <module>${app.artifactId}-reladomo-ddls</module>
        <module>${app.artifactId}-services</module>
        <module>${app.artifactId}-dtos</module>
        <module>${app.artifactId}-graphql-data-fetchers</module>
        <module>${app.artifactId}-graphql-runtime-wiring</module>
        <module>${app.artifactId}-graphql-runtime-wiring-query</module>
        <module>${app.artifactId}-graphql-fragment</module>
        <module>${app.artifactId}-graphql-schema</module>
        <module>${app.artifactId}-json-views</module>
        <module>${app.artifactId}-dropwizard-application</module>
        <module>${app.artifactId}-klass-html</module>
        <module>${app.artifactId}-klass-projections</module>
        <module>${app.artifactId}-klass-services</module>
        <module>${app.artifactId}-meta-model-constants</module>
        <module>${app.artifactId}-uml-nomnoml</module>
    </modules>

</project>
