<?xml version="1.0" encoding="UTF-8"?>
<project
        xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>com.stackoverflow</groupId>
        <artifactId>stackoverflow</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>stackoverflow-dropwizard-application</artifactId>

    <name>${app.name} Application</name>

    <build>
        <plugins>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <configuration>
                    <basedir>${project.basedir}</basedir>
                    <workingDirectory>${project.basedir}</workingDirectory>
                    <executable>java</executable>
                    <commandlineArgs>-Dconfig.resource=demo.conf -jar ${project.build.directory}/${project.artifactId}-${project.version}.jar server config.yml</commandlineArgs>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>${mainClass}</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            <plugin>
                <groupId>cool.klass</groupId>
                <artifactId>klass-generator-reladomo-plugin</artifactId>
                <version>${klass.version}</version>

                <configuration>
                    <rootPackageName>${app.rootPackageName}</rootPackageName>
                    <klassSourcePackages>
                        <klassSourcePackage>klass.model.meta.domain</klassSourcePackage>
                        <klassSourcePackage>${app.rootPackageName}</klassSourcePackage>
                    </klassSourcePackages>
                </configuration>

                <executions>

                    <execution>
                        <id>generate-production-runtime-configuration</id>
                        <goals>
                            <goal>generate-reladomo-runtime-configuration</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>
                                ${project.build.directory}/generated-resources/reladomo-runtime-configuration
                            </outputDirectory>
                            <outputFilename>ReladomoRuntimeConfiguration.xml</outputFilename>
                            <connectionManagerFullyQualifiedName>
                                cool.klass.reladomo.connectionmanager.h2.H2ConnectionManager
                            </connectionManagerFullyQualifiedName>
                            <isTest>false</isTest>
                        </configuration>
                    </execution>

                    <execution>
                        <id>generate-test-runtime-configuration</id>
                        <goals>
                            <goal>generate-reladomo-runtime-configuration</goal>
                        </goals>
                    </execution>

                </executions>

                <dependencies>

                    <dependency>
                        <groupId>${project.groupId}</groupId>
                        <artifactId>${app.artifactId}-domain-model</artifactId>
                        <version>${project.version}</version>
                    </dependency>

                    <dependency>
                        <groupId>cool.klass</groupId>
                        <artifactId>klass-model-bootstrapped-meta</artifactId>
                        <version>${klass.version}</version>
                    </dependency>

                </dependencies>
            </plugin>

            <plugin>
                <groupId>cool.klass</groupId>
                <artifactId>klass-generator-dropwizard-plugin</artifactId>
                <version>${klass.version}</version>
                <configuration>
                    <rootPackageName>${app.rootPackageName}</rootPackageName>
                    <applicationName>${app.name}</applicationName>
                    <klassSourcePackages>
                        <klassSourcePackage>klass.model.meta.domain</klassSourcePackage>
                        <klassSourcePackage>${app.rootPackageName}</klassSourcePackage>
                    </klassSourcePackages>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate-abstract-application</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>

                    <dependency>
                        <groupId>${project.groupId}</groupId>
                        <artifactId>${app.artifactId}-domain-model</artifactId>
                        <version>${project.version}</version>
                    </dependency>

                    <dependency>
                        <groupId>cool.klass</groupId>
                        <artifactId>klass-model-bootstrapped-meta</artifactId>
                        <version>${klass.version}</version>
                    </dependency>

                </dependencies>
            </plugin>

        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>cool.klass</groupId>
            <artifactId>klass-dropwizard-bundle-sample-data</artifactId>
            <version>${klass.version}</version>
        </dependency>

        <dependency>
            <groupId>io.dropwizard</groupId>
            <artifactId>dropwizard-core</artifactId>
        </dependency>

        <dependency>
            <groupId>io.dropwizard</groupId>
            <artifactId>dropwizard-jersey</artifactId>
        </dependency>

        <dependency>
            <groupId>com.google.code.findbugs</groupId>
            <artifactId>jsr305</artifactId>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>${app.artifactId}-services</artifactId>
        </dependency>

        <dependency>
            <groupId>com.stackoverflow</groupId>
            <artifactId>stackoverflow-graphql</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>cool.klass</groupId>
            <artifactId>klass-connection-manager-h2</artifactId>
            <version>${klass.version}</version>
			<scope>runtime</scope>
        </dependency>

        <dependency>
            <groupId>cool.klass</groupId>
            <artifactId>klass-dropwizard-bundle-bootstrap-writer</artifactId>
            <version>${klass.version}</version>
        </dependency>

        <dependency>
