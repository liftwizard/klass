<?xml version="1.0" encoding="UTF-8"?>
<project
        xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <properties>
        <klass.version>${project.version}</klass.version>

        <app.artifactId>stackoverflow</app.artifactId>
        <app.rootPackageName>com.stackoverflow</app.rootPackageName>
        <app.name>StackOverflow</app.name>

        <mainClass>${app.rootPackageName}.dropwizard.application.${app.name}Application</mainClass>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <maven.compiler.parameters>true</maven.compiler.parameters>
    </properties>

    <parent>
        <groupId>cool.klass</groupId>
        <artifactId>xample-projects</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>

    <groupId>com.stackoverflow</groupId>
    <artifactId>stackoverflow</artifactId>
    <packaging>pom</packaging>

    <name>${app.name} (Module Group)</name>

    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>com.liftwizard</groupId>
                <artifactId>liftwizard-dependencies</artifactId>
                <version>0.1.0</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>com.liftwizard</groupId>
                <artifactId>liftwizard-bom</artifactId>
                <version>0.1.0</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <build>
        <defaultGoal>clean install</defaultGoal>

        <plugins>

            <plugin>
                <artifactId>maven-checkstyle-plugin</artifactId>
            </plugin>

            <plugin>
                <artifactId>maven-enforcer-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>versions-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>

        </plugins>

    </build>

    <modules>
        <module>${app.artifactId}-domain-model</module>
        <module>${app.artifactId}-dropwizard-application</module>
        <module>${app.artifactId}-dtos</module>
        <module>${app.artifactId}-graphql-data-fetchers</module>
        <module>${app.artifactId}-graphql-runtime-wiring-query</module>
        <module>${app.artifactId}-graphql-runtime-wiring</module>
        <module>${app.artifactId}-graphql-schema</module>
        <module>${app.artifactId}-json-views</module>
        <module>${app.artifactId}-meta-model-constants</module>
        <module>${app.artifactId}-reladomo-ddls</module>
        <module>${app.artifactId}-reladomo-definitions</module>
        <module>${app.artifactId}-reladomo-pojos</module>
        <module>${app.artifactId}-services</module>
    </modules>

</project>
