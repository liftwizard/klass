<?xml version="1.0" encoding="UTF-8"?>
<project
        xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>cool.klass.xample.coverage</groupId>
        <artifactId>coverage-example</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>coverage-example-graphql-runtime-wiring-query</artifactId>

    <name>${app.name} GraphQL Query Runtime Wiring</name>

    <dependencies>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>${app.artifactId}-reladomo-pojos</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>${app.artifactId}-graphql-data-fetchers</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>cool.klass</groupId>
            <artifactId>klass-graphql-type-runtime-wiring-provider</artifactId>
            <version>${klass.version}</version>
        </dependency>

        <dependency>
            <groupId>cool.klass</groupId>
            <artifactId>klass-model-bootstrapped-graphql-data-fetchers</artifactId>
            <version>${klass.version}</version>
        </dependency>

        <dependency>
            <groupId>cool.klass</groupId>
            <artifactId>klass-model-bootstrapped-reladomo-pojos</artifactId>
            <version>${klass.version}</version>
        </dependency>

        <dependency>
            <groupId>cool.klass</groupId>
            <artifactId>klass-graphql-reladomo-finder-fetcher</artifactId>
            <version>${klass.version}</version>
        </dependency>

        <dependency>
            <groupId>cool.klass</groupId>
            <artifactId>klass-graphql-reladomo-operation-fetcher</artifactId>
            <version>${klass.version}</version>
        </dependency>

        <dependency>
            <groupId>cool.klass</groupId>
            <artifactId>klass-reladomo-graphql-deep-fetcher</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>cool.klass</groupId>
            <artifactId>klass-data-store-reladomo</artifactId>
            <version>${klass.version}</version>
        </dependency>

        <dependency>
            <groupId>cool.klass</groupId>
            <artifactId>klass-data-store</artifactId>
            <version>${klass.version}</version>
        </dependency>

        <dependency>
            <groupId>cool.klass</groupId>
            <artifactId>klass-model-meta-interface</artifactId>
            <version>${klass.version}</version>
        </dependency>

        <dependency>
            <groupId>com.graphql-java</groupId>
            <artifactId>graphql-java</artifactId>
        </dependency>

        <dependency>
            <groupId>com.goldmansachs.reladomo</groupId>
            <artifactId>reladomo</artifactId>
        </dependency>

    </dependencies>

    <build>

        <plugins>

            <plugin>
                <groupId>cool.klass</groupId>
                <artifactId>klass-generator-graphql-runtime-wiring-query-plugin</artifactId>
                <version>${klass.version}</version>

                <configuration>
                    <klassSourcePackages>
                        <klassSourcePackage>${app.rootPackageName}</klassSourcePackage>
                        <klassSourcePackage>klass.model.meta.domain</klassSourcePackage>
                    </klassSourcePackages>
                </configuration>

                <executions>
                    <execution>
                        <goals>
                            <goal>generate-graphql-query-runtime-wiring</goal>
                        </goals>
                        <phase>generate-sources</phase>
                    </execution>
                </executions>

                <dependencies>

                    <dependency>
                        <groupId>${project.groupId}</groupId>
                        <artifactId>${app.artifactId}-domain-model</artifactId>
                        <version>${project.version}</version>
                    </dependency>

                    <dependency>
                        <groupId>cool.klass</groupId>
                        <artifactId>klass-model-bootstrapped-domain-model</artifactId>
                        <version>${klass.version}</version>
                    </dependency>

                </dependencies>
            </plugin>

        </plugins>

    </build>

</project>
