<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project
        xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>cool.klass</groupId>
        <artifactId>xample-projects</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <properties>
        <klass.version>0.1.0-SNAPSHOT</klass.version>

        <app.artifactId>coverage-example</app.artifactId>
        <app.rootPackageName>cool.klass.xample.coverage</app.rootPackageName>
        <app.name>CoverageExample</app.name>

        <mainClass>${app.rootPackageName}.dropwizard.application.${app.name}Application</mainClass>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <maven.compiler.parameters>true</maven.compiler.parameters>
    </properties>

    <groupId>cool.klass.xample.coverage</groupId>
    <artifactId>coverage-example</artifactId>
    <version>0.1.0-SNAPSHOT</version>

    <packaging>pom</packaging>

    <name>${app.name} (Module Group)</name>

    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>io.liftwizard</groupId>
                <artifactId>liftwizard-dependencies</artifactId>
                <version>${liftwizard.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>io.liftwizard</groupId>
                <artifactId>liftwizard-bom</artifactId>
                <version>${liftwizard.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>cool.klass</groupId>
                <artifactId>klass-bom</artifactId>
                <version>${klass.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <build>
        <defaultGoal>clean install</defaultGoal>

        <plugins>

            <plugin>
                <artifactId>maven-checkstyle-plugin</artifactId>
            </plugin>

            <plugin>
                <artifactId>maven-enforcer-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>versions-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>

        </plugins>

    </build>

    <modules>
        <module>${app.artifactId}-domain-model</module>
        <module>${app.artifactId}-dropwizard-application</module>
        <module>${app.artifactId}-dtos</module>
        <module>${app.artifactId}-graphql-data-fetchers</module>
        <module>${app.artifactId}-graphql-fragment</module>
        <module>${app.artifactId}-graphql-reladomo-finder</module>
        <module>${app.artifactId}-graphql-runtime-wiring-query</module>
        <module>${app.artifactId}-graphql-runtime-wiring</module>
        <module>${app.artifactId}-graphql-schema-query</module>
        <module>${app.artifactId}-graphql-schema</module>
        <module>${app.artifactId}-json-views</module>
        <module>${app.artifactId}-klass-html</module>
        <module>${app.artifactId}-klass-projections</module>
        <module>${app.artifactId}-klass-services</module>
        <module>${app.artifactId}-reladomo-ddls</module>
        <module>${app.artifactId}-reladomo-definitions</module>
        <module>${app.artifactId}-reladomo-merge-hooks</module>
        <module>${app.artifactId}-reladomo-pojos</module>
        <module>${app.artifactId}-reladomo-readable-interfaces</module>
        <module>${app.artifactId}-reladomo-runtime-configuration</module>
        <module>${app.artifactId}-services</module>
        <module>${app.artifactId}-uml-nomnoml</module>
        <module>klass-generator-klass-html-test</module>
        <module>klass-reladomo-operation-compiler-test</module>
        <module>liftwizard-reladomo-graphql-operation-test</module>
        <module>liftwizard-reladomo-test-resource-writer-tests</module>
    </modules>

</project>
