{
  "server"     : {
    "detailedJsonProcessingExceptionMapper": true,
    "applicationConnectors"                : [
      {
        "type": "http",
        "port": 0
      }
    ],
    "adminConnectors"                      : [
      {
        "type": "http",
        "port": 0
      }
    ],
    "rootPath"                             : "/api/*",
    "requestLog"                           : {
      "appenders": [
        {
          "type": "console"
        }
      ]
    }
  },
  "logging"    : {
    "level"    : "DEBUG",
    "loggers"  : {
      "cool.klass.xample.coverage"                : "DEBUG",
      "com.gs.fw.common.mithra.sqllogs"          : "DEBUG",
      "com.gs.fw.common.mithra.batch.sqllogs"    : "DEBUG",
      "com.gs.fw.common.mithra.connectionmanager": "INFO",
      "org.eclipse.jetty"                        : "INFO",
      "org.apache.http"                          : "INFO"
    },
    "appenders": [
      {
        "type"     : "console",
        "timeZone" : "system",
        "logFormat": "%highlight(%-5level) %cyan(%date{HH:mm:ss}) [%magenta(%thread)] %green(%logger): %message%n%red(%rootException)"
      }
    ]
  },
  "klass"      : {
    "clock"      : {
      "type"   : "fixed",
      "instant": "2000-12-31T23:59:59Z"
    },
    "dataStore"  : {
      "type": "reladomo",
      "uuid": {
        "type": "seed",
        "seed": "test seed"
      }
    },
    "domainModel": {
      "type"          : "compiler",
      "sourcePackages": [
        "klass.model.meta.domain",
        "cool.klass.xample.coverage"
      ]
    }
  },
  "authFilters": [
    {
      "type": "impersonation"
    }
  ],
  "h2"                : {
    "enabled": true
  },
  "dataSources"       : [
    {
      "name"                  : "h2-mem",
      "driverClass"           : "com.p6spy.engine.spy.P6SpyDriver",
      "readOnlyByDefault"     : false,
      "user"                  : "sa",
      "password"              : "",
      "url"                   : "jdbc:p6spy:h2:mem:",
      "properties"            : {
        "charSet": "UTF-8"
      },
      "logValidationErrors"   : true,
      "maxWaitForConnection"  : "1 second",
      "validationQueryTimeout": "3 seconds"
    },
    {
      "name"                  : "h2-tcp",
      "driverClass"           : "com.p6spy.engine.spy.P6SpyDriver",
      "readOnlyByDefault"     : false,
      "user"                  : "sa",
      "password"              : "",
      "url"                   : "jdbc:p6spy:h2:tcp://localhost:9092/liftwizard-app-h2",
      "properties"            : {
        "charSet": "UTF-8"
      },
      "logValidationErrors"   : true,
      "maxWaitForConnection"  : "1 second",
      "validationQueryTimeout": "3 seconds"
    },
    {
      "name"                  : "h2-file",
      "driverClass"           : "com.p6spy.engine.spy.P6SpyDriver",
      "readOnlyByDefault"     : false,
      "user"                  : "sa",
      "password"              : "",
      "url"                   : "jdbc:p6spy:h2:file:./target/h2db/liftwizard-app-h2",
      "properties"            : {
        "charSet": "UTF-8"
      },
      "logValidationErrors"   : true,
      "maxWaitForConnection"  : "1 second",
      "validationQueryTimeout": "3 seconds"
    }
  ],
  "ddlExecutors"      : [
    {
      "dataSourceName": "h2-tcp"
    }
  ],
  "reladomo"          : {
    "runtimeConfigurationPaths": [
      "reladomo-runtime-configuration/ReladomoRuntimeConfiguration.xml"
  ]
  },
  "connectionManagers": [
    {
      "connectionManagerName": "h2-mem",
      "dataSourceName"       : "h2-mem",
      "databaseType"         : "H2",
      "schemaName"           : "liftwizard-app-h2"
    },
    {
      "connectionManagerName": "h2-tcp",
      "dataSourceName"       : "h2-tcp",
      "databaseType"         : "H2",
      "schemaName"           : "liftwizard-app-h2"
    },
    {
      "connectionManagerName": "h2-file",
      "dataSourceName"       : "h2-file",
      "databaseType"         : "H2",
      "schemaName"           : "liftwizard-app-h2"
    }
  ]
}
