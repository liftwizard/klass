<?xml version="1.0" encoding="UTF-8"?>
<project
        xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>cool.klass</groupId>
        <artifactId>xample-projects</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <properties>
        <klass.version>0.1.0-SNAPSHOT</klass.version>

        <app.artifactId>reladomo-bug</app.artifactId>
        <app.rootPackageName>com.repro.reladomo.bug</app.rootPackageName>
        <app.name>ReladomoBug</app.name>

        <mainClass>${app.rootPackageName}.dropwizard.application.${app.name}Application</mainClass>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <groupId>com.repro.reladomo.bug</groupId>
    <artifactId>reladomo-bug</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>${app.name} (Module Group)</name>

    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>com.liftwizard</groupId>
                <artifactId>liftwizard-dependencies</artifactId>
                <version>0.1.0</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>com.liftwizard</groupId>
                <artifactId>liftwizard-bom</artifactId>
                <version>0.1.0</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <build>
        <defaultGoal>clean install</defaultGoal>

        <plugins>

            <plugin>
                <artifactId>maven-checkstyle-plugin</artifactId>
            </plugin>

            <plugin>
                <artifactId>maven-enforcer-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>versions-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>

        </plugins>

    </build>

    <modules>
        <module>reladomo-bug-domain-model</module>
        <module>reladomo-bug-reladomo-definitions</module>
        <module>reladomo-bug-reladomo-pojos</module>
        <module>reladomo-bug-reladomo-ddls</module>
        <module>reladomo-bug-services</module>
        <module>reladomo-bug-dtos</module>
        <module>reladomo-bug-dropwizard-application</module>
        <module>reladomo-bug-meta-model-constants</module>
    </modules>
</project>
