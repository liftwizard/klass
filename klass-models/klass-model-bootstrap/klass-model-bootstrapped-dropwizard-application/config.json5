{
  "server": {
    "detailedJsonProcessingExceptionMapper": true,
    "rootPath": "/api/*",
    "requestLog": {
      "appenders": [
        {
          "type": "console",
        }
      ]
    }
  },
  "logging": {
    "level": "INFO",
    "loggers": {
      "com.gs.fw.common.mithra.batch.sqllogs": "DEBUG",
      "com.gs.fw.common.mithra.connectionmanager": "INFO",
      "com.gs.fw.common.mithra.sqllogs": "DEBUG",
      "klass.model.meta.domain": "DEBUG",
      "org.apache.http": "INFO",
      "org.eclipse.jetty": "INFO",
    },
    "appenders": [
      {
        "type": "console",
        "timeZone": "utc",
        "logFormat": "%highlight(%-5level) %cyan(%date{HH:mm:ss}) [%white(%thread)] %blue(%marker) {%magenta(%mdc)} %green(%logger): %message%n%red(%rootException)",
        "includeCallerData": true
      }
    ]
  },
  "klass": {
    "clock": {
      "type": "system"
    },
    "domainModel": {
      "type": "compiler",
      "sourcePackages": [
        "klass.model.meta.domain"
      ]
    },
    "dataStore": {
      "type": "reladomo",
      "uuid": {
        "type": "system"
      }
    }
  },
  "configLogging": {
    "enabled": true
  },
  "h2": {
    "enabled": true,
    "webPort": 8064,
    "tcpPort": 9064,
  },
  "dataSources": [
    {
      "name": "h2-mem",
      "driverClass": "com.p6spy.engine.spy.P6SpyDriver",
      "readOnlyByDefault": false,
      "user": "sa",
      "password": "",
      "url": "jdbc:p6spy:h2:mem:",
      "properties": {
        "charSet": "UTF-8"
      },
      "logValidationErrors": true,
      "maxWaitForConnection": "1 second",
    },
    {
      "name": "h2-tcp",
      "driverClass": "com.p6spy.engine.spy.P6SpyDriver",
      "readOnlyByDefault": false,
      "user": "sa",
      "password": "",
      "url": "jdbc:p6spy:h2:tcp://localhost:9064/klass-bootstrapped-h2",
      "properties": {
        "charSet": "UTF-8"
      },
      "logValidationErrors": true,
      "maxWaitForConnection": "1 second",
    },
    {
      "name": "h2-file",
      "driverClass": "com.p6spy.engine.spy.P6SpyDriver",
      "readOnlyByDefault": false,
      "user": "sa",
      "password": "",
      "url": "jdbc:p6spy:h2:file:./target/h2db/klass-bootstrapped-h2",
      "properties": {
        "charSet": "UTF-8"
      },
      "logValidationErrors": true,
      "maxWaitForConnection": "1 second",
    }
  ],
  "ddlExecutors": [
    {
      "dataSourceName": "h2-tcp"
    }
  ],
  "reladomo": {
    "runtimeConfigurationPaths": [
      "reladomo-runtime-configuration/ReladomoRuntimeConfiguration.xml"
    ]
  },
  "connectionManagers": [
    {
      "connectionManagerName": "h2-mem",
      "dataSourceName": "h2-mem",
      "databaseType": "H2",
      "schemaName": "klass-bootstrapped-h2"
    },
    {
      "connectionManagerName": "h2-tcp",
      "dataSourceName": "h2-tcp",
      "databaseType": "H2",
      "schemaName": "klass-bootstrapped-h2"
    },
    {
      "connectionManagerName": "h2-file",
      "dataSourceName": "h2-file",
      "databaseType": "H2",
      "schemaName": "klass-bootstrapped-h2"
    }
  ],
  "jerseyHttpLogging": {
    "maxEntitySize": "1 kilobyte"
  },
  "bootstrap": {
    "enabled": true
  }
}
