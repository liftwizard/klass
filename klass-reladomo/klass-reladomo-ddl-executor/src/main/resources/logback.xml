<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="30 seconds" packagingData="true">
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%highlight(%-5level) %d{"HH:mm:ss"} %msg%n [%thread] %logger{40} .\(%file:%line\)%n%rEx</pattern>
        </encoder>
    </appender>

    <logger name="com.gs.fw.common.mithra.sqllogs" level="DEBUG" />
    <logger name="com.gs.fw.common.mithra.batch.sqllogs" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="Console" />
    </root>
</configuration>
